<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/tab_text_languages"
        android:visibility="visible">
        <!-- mandatory params in MultiSelectListPreference tag:
                app:key = any string, including empty string, but there's got be a string!
                app:defaultValue = a string in strings.xml or an array in arrays.xml; in the
                                    end of the day, there's gotta be one or the other, without
                                    which a crash occurs
        -->
        <br.com.pearls.Settings.LanguageMultiSelect
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:defaultValue="@array/language_defaults"
            app:key="@string/languages_key"
            app:summary="@string/languages_summary"
            app:title="@string/languages_title" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/messages_header">

        <EditTextPreference
            app:key="signature"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="@string/reply_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title" />

        <SwitchPreferenceCompat
            app:dependency="sync"
            app:key="attachment"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/attachment_title" />

    </PreferenceCategory>

</PreferenceScreen>
